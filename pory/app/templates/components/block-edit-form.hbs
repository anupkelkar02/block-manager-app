<div id="editBlockAlertSuccess" class="{{alertSuccessClass}}" role="alert" hidden>
    {{alertSuccessMessage}}
</div>

<div class="modal fade" id="editBlockModal" tabindex="-1" role="dialog">
    <form {{action "validate" on="submit"}} hidden={{messageSent}}>
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" area-label="close">
                        <span class="fa fa-times" aria-hidden="true"></span>
                        <span class="sr-only">Close</span>
                    </button>

                    <h4 class="modal-title">
                        Edit Block
                    </h4>
                </div>

                <div class="modal-body">
                    {{input value=id id="editBlockModalId" type="hidden"}}

                    <div class="{{alertErrorClass}}" role="alert">
                        {{alertErrorMessage}}
                    </div>

                  <fieldset class="{{referenceField}}">
                    <label for="reference">
                      Reference
                    </label>

                    {{input value=reference id="editBlockModalReference" type="text" class=referenceInput placeholder="Reference"}}
                  </fieldset>

                  <fieldset class="{{nameField}}">
                    <label for="nameField">
                      Name
                    </label>

                    {{input value=name id="editBlockModalName" type="text" class=nameInput placeholder="Name"}}
                  </fieldset>

                  <fieldset class="{{siteField}}">
                    <label for="siteField">
                      Site
                    </label>

                    {{input value=site id="editBlockModalSite" type="text" class=siteInput placeholder="Site"}}
                  </fieldset>

                   
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Cancel
                    </button>

                    <button type="submit" class="btn btn-primary">
                        Save
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>