<div id="createSurveyorAlertSuccess" class="{{alertSuccessClass}}" role="alert" hidden>
    {{alertSuccessMessage}}
</div>

<div class="modal fade" id="createSurveyorModal" tabindex="-1" role="dialog">
    <form {{action "validate" on="submit"}} hidden={{messageSent}}>
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" area-label="close">
                        <span class="fa fa-times" aria-hidden="true"></span>
                        <span class="sr-only">Close</span>
                    </button>

                    <h4 class="modal-title">
                        Create Surveyor
                    </h4>
                </div>

                <div class="modal-body">
                    <div class="{{alertErrorClass}}" role="alert">
                        {{alertErrorMessage}}
                    </div>

                    <fieldset class="{{titleField}}">
                        <label for="title">
                            Title
                        </label>

                        {{input value=title id="createSurveyorModalTitle" type="text" class=titleInput placeholder="Title"}}
                    </fieldset>

                    <fieldset class="{{firstNameField}}">
                        <label for="firstName">
                            First Name
                        </label>

                        {{input value=firstName id="createSurveyorModalFirstName" type="text" class=firstNameInput placeholder="First Name"}}
                    </fieldset>

                    <fieldset class="{{surnameField}}">
                        <label for="surname">
                            Surname
                        </label>

                        {{input value=surname id="createSurveyorModalSurname" type="text" class=surnameInput placeholder="Surname"}}
                    </fieldset>

                    <fieldset class="{{companyField}}">
                        <label for="company">
                            Company
                        </label>

                        {{input value=company id="createSurveyorModalCompany" type="text" class=companyInput placeholder="Company"}}
                    </fieldset>

                    <fieldset class="{{telephoneField}}">
                        <label for="telephone">
                            Telephone
                        </label>

                        {{input value=telephone id="createSurveyorModalTelephone" type="text" class=telephoneInput placeholder="Telephone"}}
                    </fieldset>

                    <fieldset class="{{mobileField}}">
                        <label for="mobile">
                            Mobile
                        </label>

                        {{input value=mobile id="createSurveyorModalMobile" type="text" class=mobileInput placeholder="Mobile"}}
                    </fieldset>

                    <fieldset class="{{faxField}}">
                        <label for="fax">
                            Fax
                        </label>

                        {{input value=fax id="createSurveyorModalFax" type="text" class=faxInput placeholder="Fax"}}
                    </fieldset>

                    <fieldset class="{{emailField}}">
                        <label for="email">
                            Email
                        </label>

                        {{input value=email id="createSurveyorModalEmail" type="email" class=emailInput placeholder="Email"}}
                    </fieldset>

                    <fieldset class="{{houseField}}">
                        <label for="house">
                            House
                        </label>

                        {{input value=house id="createSurveyorModalHouse" type="text" class=houseInput placeholder="House"}}
                    </fieldset>

                    <fieldset class="{{streetField}}">
                        <label for="street">
                            Street
                        </label>

                        {{input value=street id="createSurveyorModalStreet" type="text" class=streetInput placeholder="Street"}}
                    </fieldset>

                    <fieldset class="{{localityField}}">
                        <label for="locality">
                            Locality
                        </label>

                        {{input value=locality id="createSurveyorModalLocality" type="text" class=localityInput placeholder="Locality"}}
                    </fieldset>

                    <fieldset class="{{townField}}">
                        <label for="town">
                            Town
                        </label>

                        {{input value=town id="createSurveyorModalTown" type="text" class=townInput placeholder="Town"}}
                    </fieldset>

                    <fieldset class="{{countyField}}">
                        <label for="county">
                            County
                        </label>

                        {{input value=county id="createSurveyorModalCounty" type="text" class=countyInput placeholder="County"}}
                    </fieldset>

                    <fieldset class="{{postcodeField}}">
                        <label for="postcode">
                            Postcode
                        </label>

                        {{input value=postcode id="createSurveyorModalPostcode" type="text" class=postcodeInput placeholder="Postcode"}}
                    </fieldset>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Cancel
                    </button>

                    <button type="submit" class="btn btn-primary">
                        Create
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>